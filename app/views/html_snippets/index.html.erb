<h1>Listing html_snippets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Html</th>
    <th>Css</th>
    <th>Javascript</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @html_snippets.each do |html_snippet| %>
  <tr>
    <td><%= html_snippet.name %></td>
    <td><%= html_snippet.description %></td>
    <td><%= html_snippet.html %></td>
    <td><%= html_snippet.css %></td>
    <td><%= html_snippet.javascript %></td>
    <td><%= link_to 'Show', html_snippet %></td>
    <td><%= link_to 'Edit', edit_html_snippet_path(html_snippet) %></td>
    <td><%= link_to 'Destroy', html_snippet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

