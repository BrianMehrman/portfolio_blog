<p id="notice"><%= notice %></p>

<h1>
  <%= @post.title %>
</h1>

<p class="description" >
  <%= @post.description %>
</p>

<div>  
  <iframe id="preview"></iframe>
</div>

<div>
  <%= @post.content %>
</div>

	<script>
		$(function(){
			window.updateiFrame("#preview","<%= j(raw @post.html) %>","<%= j @post.css %>", "<%= j @post.javascript %>");
  	 });
  </script>

<% if logged_in? %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
