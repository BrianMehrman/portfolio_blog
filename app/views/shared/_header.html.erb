<header id="header">
	<h1><%= link_to 'Brian Mehrman', pages_home_path %></h1>
	<p>Showing off what I can do</p>
</header>
<div class="user_panel">
	<% if logged_in? %>
		<p class='greet-user' > 
			Hello, <%= current_user.name %>
		</p>
		<%= link_to "Edit User", user_path(current_user), :class=> 'edit-user' %>
		<%= link_to "Sign Out", sessions_path, :method => :delete, :class=> 'sign-out' %>
	<% else %>
		<%= link_to "Sign In", new_sessions_path, :class=>'sign-in' %>
	<% end -%>
</div>